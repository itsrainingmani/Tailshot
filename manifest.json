{
	"manifest_version": 3,
	"name": "Tailscale Image Sender",
	"version": "1.0",
	"description": "Send images to Tailscale devices",
	"permissions": ["contextMenus", "nativeMessaging", "notifications"],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background.js"
	},
	"web_accessible_resources": [
		{
			"resources": ["popup.html"],
			"matches": ["<all_urls>"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
